{
    "name": "community-api-backend",
    "version": "1.0.0",
    "description": "Backend repository for Devbyte community online platform",
    "main": "src/server.js",
    "scripts": {
        "test": "jest",
        "start:prod": "cross-env NODE_ENV=production node src/server.js",
        "start:dev": "cross-env NODE_ENV=development nodemon",
        "dev:test": "cross-env NODE_ENV=test nodemon src/server.js",
        "lint": "eslint .",
        "lint-staged": "lint-staged",
        "precommit": "npm run -s lint-staged && npm run -s test",
        "format": "prettier --write .",
        "db:start": "docker-compose up -d postgres",
        "db:stop": "docker-compose down",
        "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
        "migrate": "sequelize-cli db:migrate",
        "migrate:status": "sequelize-cli db:migrate:status",
        "migrate:undo": "sequelize-cli db:migrate:undo",
        "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
        "migration:generate": "sequelize-cli migration:generate --name",
        "migrate:status:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate:status",
        "migrate:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate",
        "migrate:undo:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate:undo",
        "migrate:undo:all:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate:undo:all",
        "seed:skills:bulk": "cross-env NODE_ENV=production node seeders/scripts/seedSkills.js"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.948.0",
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cross-env": "^10.1.0",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "express": "^5.1.0",
        "file-type": "^21.0.0",
        "helmet": "^7.0.0",
        "ioredis": "^5.8.0",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "minio": "^8.0.6",
        "moment-timezone": "^0.6.0",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.6",
        "nodemon": "^3.1.10",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "sequelize-cli": "^6.6.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuidv7": "^1.0.2"
    },
    "devDependencies": {
        "@types/multer": "^2.0.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.0",
        "prettier": "^3.3.0",
        "supertest": "^7.1.4",
        "testcontainers": "^10.9.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DevByte-Community/Community-API-Backend.git"
    },
    "keywords": [
        "community",
        "api",
        "express",
        "backend",
        "open-source"
    ],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DevByte-Community/Community-API-Backend/issues"
    },
    "homepage": "https://github.com/DevByte-Community/Community-API-Backend#readme",
    "engines": {
        "node": ">=18.0.0"
    }
}
